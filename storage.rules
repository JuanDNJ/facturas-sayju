rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas simples: cada usuario puede leer sus propios archivos y escribir en su carpeta
    match /users/{userId}/avatar/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // Logos de sellos: users/{uid}/stamps/**
    match /users/{userId}/stamps/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }
  }
}
